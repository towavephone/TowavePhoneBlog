<footer id="footer">
    <div class="outer">
        <div id="footer-info">
            <div class="footer-left">
                <i class="fa fa-copyright"></i> 
                <% if (theme.since && !isNaN(theme.since) && theme.since < date(new Date(), 'YYYY')) { %><%- theme.since%>-<% } %><%= date(new Date(), 'YYYY') %> <%= config.author || config.title %>
                <% if (theme.ICP.on) {%> <a href="http://www.miitbeian.gov.cn/" target="_blank"><%= theme.ICP.value %></a> <% } %>
            </div>
            <div class="footer-right">
                <a href="http://hexo.io/" target="_blank" title="<%= __('tooltip.Hexo') %>">Hexo</a>  Theme <a href="https://github.com/MOxFIVE/hexo-theme-yelee" target="_blank" title="<%= __('tooltip.Yelee') %>  v<%= theme.Yelee %>">Yelee</a> by MOxFIVE <i class="fa fa-heart animated infinite pulse"></i>
            </div>
        </div>
        <% if (theme.visit_counter.on) { %>
            <div class="visit">
                <% if (theme.visit_counter.site_visit) { %>
                    <span id="busuanzi_container_site_pv" style='display:none;margin-right:10px;'>
                        <span id="site-visit" title="<%= __('visit_counter.site') %>"><i class="fa fa-user" aria-hidden="true"></i><%= __('visit_counter.site') %>：<span id="busuanzi_value_site_uv"></span>
                        </span>
                    </span>
                <% } %>
                <% if (theme.visit_counter.page_visit) { %>
                    <span id="busuanzi_container_page_pv" style='display:none;margin-right:10px;'>
                        <span id="page-visit"  title="<%= __('visit_counter.page') %>"><i class="fa fa-eye animated infinite pulse" aria-hidden="true"></i><%= __('visit_counter.page') %>:<span id="busuanzi_value_page_pv"></span>
                        </span>
                    </span>
                <% } %>
                <% if (theme.visit_counter.site_word) { %>
                    <span title="<%= __('visit_counter.total_word_count') %>" style='margin-right:10px;'>
                        <i class="fa fa-pencil animated infinite pulse" aria-hidden="true"></i>
                        <%= __('visit_counter.total_word_count') %>：<%= totalcount(site) %>
                    </span>
                <% } %>
                <% if (theme.visit_counter.post_length) { %>
                    <span title="<%= __('visit_counter.total_post_length') %>" style='margin-right:10px;'>
                        <i class="fa fa-folder animated infinite pulse" aria-hidden="true"></i>
                        <%= __('visit_counter.total_post_length') %>：<%= site.posts.length %>
                    </span>
                <% } %>
            </div>
        <% } %>
    </div>
</footer>