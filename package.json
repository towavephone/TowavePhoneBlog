{
  "name": "hexo-site",
  "version": "0.0.0",
  "private": true,
  "hexo": {
    "version": "3.7.1"
  },
  "scripts": {
    "dev": "hexo s -p 80",
    "prod": "hexo clean && hexo g --debug && gulp",
    "deploy": "hexo d",
    "cm": "git-cz",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "postcommit": "yarn lint:markdown && yarn changelog",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "lint:markdown": "markdownlint --config ./.markdownlint.json ./source/_posts/*.md"
  },
  "dependencies": {
    "gulp": "^3.9.1",
    "gulp-htmlclean": "^2.7.22",
    "gulp-htmlmin": "^4.0.0",
    "gulp-minify-css": "^1.2.4",
    "gulp-uglify-es": "^1.0.1",
    "hexo": "^3.7.1",
    "hexo-blog-encrypt": "^2.0.7",
    "hexo-deployer-git": "^0.3.1",
    "hexo-generator-archive": "^0.1.5",
    "hexo-generator-category": "^0.1.3",
    "hexo-generator-feed": "^1.2.2",
    "hexo-generator-index": "^0.2.1",
    "hexo-generator-search": "^2.2.5",
    "hexo-generator-seo-friendly-sitemap": "^0.0.21",
    "hexo-generator-tag": "^0.2.0",
    "hexo-renderer-ejs": "^0.3.1",
    "hexo-renderer-marked": "^0.3.2",
    "hexo-renderer-stylus": "^0.3.3",
    "hexo-server": "^0.3.1",
    "hexo-tag-aplayer": "^3.0.3",
    "hexo-wordcount": "^3.0.2",
    "husky": "^0.14.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^5.2.5",
    "@commitlint/config-conventional": "^5.2.3",
    "commitizen": "^2.9.6",
    "conventional-changelog": "^1.1.7",
    "conventional-changelog-cli": "^1.3.21",
    "cz-conventional-changelog": "^2.1.0",
    "markdownlint": "^0.8.1",
    "markdownlint-cli": "^0.8.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
